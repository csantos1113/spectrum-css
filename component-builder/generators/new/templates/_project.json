{
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"name": "<%= folder(name) %>",<% if (tags.length > 0) {
		const print = tags.map(tag => `"${tag}"`).join(", "); %>
		"tags": [<%= print %>],<% } %>
	"targets": {
		"build": {},
		"test": {
			"defaultConfiguration": "scoped"
		},
		"lint": {
			"options": {
				"cwd": "components/<%= folder(name) %>"
			}
		},
		"clean": {
			"options": {
				"cwd": "components/<%= folder(name) %>"
			}
		},
		"watch": {}
	}
}
