{
  "private": true,
  "name": "spectrum-css-monorepo",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "author": "Adobe",
  "homepage": "https://opensource.adobe.com/spectrum-css/",
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/spectrum-css.git"
  },
  "bugs": {
    "url": "https://github.com/adobe/spectrum-css/issues"
  },
  "scripts": {
    "build": "nx run-many --projects tag:component --target build",
    "build:all": "nx run site:build",
    "build:clean": "nx run-many --projects tag:component --target clean,build --skip-nx-cache",
    "build:components": "nx run-many --projects tag:component --target build",
    "build:site": "nx build site",
    "build:storybook": "nx build storybook",
    "cache:clean": "nx reset",
    "ci": "nx run site:build --skip-nx-cache",
    "ci:storybook": "nx run storybook:start --skip-nx-cache",
    "clean": "nx run-many --all --target clean",
    "clean:components": "nx run-many --projects tag:component --target clean",
    "clean:site": "nx clean site",
    "clean:storybook": "nx clean storybook",
    "dev": "nx run site:dev",
    "dev:components": "nx run-many --projects tag:component --target build,watch",
    "dev:site": "nx dev site",
    "dev:storybook": "yarn storybook --no-open --port 3000",
    "fix:styles": "stylelint --fix \"components/**/*.css\" \"!components/*/dist/**\"",
    "lint": "run-p lint:*",
    "lint:packages": "node ./tasks/packageLint.js",
    "lint:styles": "stylelint \"components/**/*.css\" \"!components/*/dist/**\"",
    "mv:preview": "rimraf dist/preview && cp -r storybook/storybook-static dist/preview || exit 0",
    "new": "nx run generator:new",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prepare:site": "run-s clean:site build:all",
    "prerelease": "nx affected -t build",
    "release": "nx affected --target build && lerna publish --no-private",
    "release:beta": "yarn release:from-package --preid beta --pre-dist-tag beta --conventional-prerelease",
    "release:from-package": "nx affected --target build && lerna publish from-package --no-private",
    "release:site": "yarn build:all && gh-pages -d dist/ -f -e .",
    "start": "run-p dev:components storybook",
    "storybook": "nx run storybook:start",
    "test": "nx run storybook:test",
    "test:scope": "nx run storybook:test:scope",
    "watch": "nx watch --all --includeDependentProjects -- nx build \\$NX_PROJECT_NAME",
    "watch:components": "nx watch --projects tag:component --includeDependentProjects -- nx build \\$NX_PROJECT_NAME"
  },
  "workspaces": [
    "components/*",
    "plugins/conventional-changelog-spectrum",
    "plugins/postcss/*",
    "plugins/stylelint/*",
    "component-builder",
    "tokens",
    "ui-icons",
    "site",
    "storybook"
  ],
  "devDependencies": {
    "@adobe/spectrum-css-workflow-icons": "^1.2.1",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@nrwl/cli": "^15.9.5",
    "@nrwl/storybook": "16.8.1",
    "@nx/storybook": "16.8.1",
    "@nxkit/style-dictionary": "^3.0.2",
    "@spectrum-css/expressvars": "^3.0.9",
    "@spectrum-css/vars": "^9.0.8",
    "autoprefixer": "^10.4.15",
    "c8": "^8.0.1",
    "concat-cli": "^4.0.0",
    "concat-with-sourcemaps": "^1.1.0",
    "eslint": "^8.49.0",
    "fast-glob": "^3.3.1",
    "fuzzy-matching": "^0.4.3",
    "gh-pages": "^5.0.0",
    "husky": "^8.0.3",
    "jsdoc": "^4.0.2",
    "jsdoc-to-markdown": "^8.0.0",
    "lerna": "^6.6.2",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "nx": "16.8.1",
    "nx-cloud": "16.4.0",
    "perfectionist": "^2.4.0",
    "postcss": " ^8.4.29",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-discard-comments": "^6.0.0",
    "postcss-discard-empty": "^6.0.0",
    "postcss-each": "^1.1.0",
    "postcss-hover-media-feature": "^1.0.2",
    "postcss-import": "^15.1.0",
    "postcss-inherit": "^4.1.0",
    "postcss-licensing": "^1.0.1",
    "postcss-merge-rules": "^6.0.1",
    "postcss-preset-env": "^9.1.2",
    "postcss-sorting": "^8.0.2",
    "postcss-use": "^3.0.0",
    "postcss-value-parser": "^4.2.0",
    "prettier": "^2.8.8",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.1",
    "semver": "^7.5.1",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-use-logical": "^2.1.0",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=14 <=18.x"
  },
  "browserslist": [
    "last 2 Edge versions",
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 iOS versions"
  ],
  "lint-staged": {
    "components/*/package.json": [
      "yarn lint:packages",
      "prettier-package-json --write"
    ],
    "package.json": [
      "prettier-package-json --write"
    ],
    "*.md": [
      "prettier --write"
    ],
    "*.js": [
      "prettier --write"
    ]
  }
}
